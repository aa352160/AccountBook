<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp">

    <TextView
        android:id="@+id/tv_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="类别名称"
        app:layout_constraintBottom_toBottomOf="@+id/edt_type_name"
        app:layout_constraintTop_toTopOf="@+id/edt_type_name" />

    <EditText
        android:id="@+id/edt_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:hint="请输入类别名称"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_daily_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="每日金额"
        app:layout_constraintBottom_toBottomOf="@+id/edt_daily_money"
        app:layout_constraintTop_toTopOf="@+id/edt_daily_money" />

    <EditText
        android:id="@+id/edt_daily_money"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:hint="请输入每日金额"
        android:inputType="number"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_type_name" />

    <Button
        android:id="@+id/btn_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="保存"
        app:layout_constraintTop_toBottomOf="@id/edt_daily_money" />

</android.support.constraint.ConstraintLayout>